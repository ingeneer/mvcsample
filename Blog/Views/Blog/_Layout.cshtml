<!DOCTYPE html>
<html>
<head>
    <title>@Page.Title</title>
    @RenderSection("head", required: false)
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/main-css")
</head>
<body>
    <header>
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Ideas", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Publicar", "Create", "Publicaciones")</li>
                </ul>
            </div>
        </div>
    </header>
    <aside>
        <h2>Publicaciones más leidas</h2>
        @{ Html.RenderAction("Aside"); }
    </aside>
    <section class="container" id="content">
        @RenderBody()
    </section>
    <footer>
        <p>&copy; @DateTime.Now.Year - Ideas Inc.</p>
    </footer>
</body>
</html>
